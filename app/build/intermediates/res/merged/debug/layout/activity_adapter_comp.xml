<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SevasaComputadorasAdapter">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvRam"
        android:layout_below="@+id/tvPrecio"
        android:layout_toRightOf="@+id/textView39"
        android:layout_toEndOf="@+id/textView39" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvProcesador"
        android:layout_toLeftOf="@+id/tvPrecio"
        android:layout_below="@+id/textView40"
        android:layout_toRightOf="@+id/textView39"
        android:layout_toEndOf="@+id/textView39" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvPrecio"
        android:layout_below="@+id/tvProcesador"
        android:layout_alignRight="@+id/imgPC" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgPC"
        android:contentDescription="imagen1"
        android:layout_above="@+id/textView40"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Computadora"
        android:id="@+id/textView39"
        android:layout_below="@+id/imgPC"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ofertas del mes"
        android:id="@+id/textView40"
        android:textColor="#182bd6"
        android:textSize="25dp"
        android:textIsSelectable="false"
        android:lines="@integer/abc_config_activityDefaultDur"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imgPC"
        android:layout_toStartOf="@+id/imgPC" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvDiscoDuro"
        android:textColor="#4b63ec"
        android:textSize="15dp"
        android:layout_alignBottom="@+id/tvRam"
        android:layout_alignLeft="@+id/tvProcesador"
        android:layout_alignStart="@+id/tvProcesador"
        android:layout_alignTop="@+id/tvRam"
        android:layout_alignRight="@+id/imgPC"
        android:layout_alignEnd="@+id/imgPC" />
</RelativeLayout>
